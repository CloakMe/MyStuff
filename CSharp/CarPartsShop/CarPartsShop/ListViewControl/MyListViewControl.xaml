<UserControl x:Class="CarPartsShop.ListViewControl.MyListViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarPartsShop.ListViewControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView x:Name="myListView" Background="Beige">
            
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Part Name: " />
                        <TextBlock Text="{Binding PartName}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Prise: " />
                        <TextBlock Text="{Binding Prise}" FontWeight="Bold" />
                        <TextBlock Text="CarName :" />
                        <TextBlock Text="{Binding CarName}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" />
                        <TextBlock Text=" |" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
